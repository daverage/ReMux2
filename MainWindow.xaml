<Window x:Class="ReMux2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReMux2"
        mc:Ignorable="d"
        Title="ReMux2"
        Height="650" Width="900"
        Loaded="MainWindow_Loaded"
        Closing="MainWindow_Closing">

    <!-- Colours come from App.xaml -->
    <Grid Background="{StaticResource PanelBrush}" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER BAR -->
        <Border Background="{StaticResource PanelBrush}" CornerRadius="6" Padding="10" Margin="0,0,0,16">
            <UniformGrid Columns="6">
                <StackPanel Margin="4">
                    <TextBlock Text="Mode" Foreground="{StaticResource SecondaryForegroundBrush}" />
                    <ComboBox x:Name="ModeSelector" SelectedIndex="{Binding ModeSelectedIndex, Mode=TwoWay}"
                              SelectionChanged="ModeSelector_SelectionChanged">
                        <ComboBoxItem Content="Extract Audio"/>
                        <ComboBoxItem Content="Remux Audio"/>
                        <ComboBoxItem Content="YouTube Optimize"/>
                        <ComboBoxItem Content="Yify Reencode"/>
                        <ComboBoxItem Content="Custom Encode"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="4">
                    <TextBlock Text="Preset" Foreground="{StaticResource SecondaryForegroundBrush}" />
                    <ComboBox x:Name="PresetSelector" SelectedIndex="{Binding PresetSelectedIndex, Mode=TwoWay}">
                        <ComboBoxItem Content="ultrafast"/>
                        <ComboBoxItem Content="superfast"/>
                        <ComboBoxItem Content="veryfast"/>
                        <ComboBoxItem Content="faster"/>
                        <ComboBoxItem Content="fast"/>
                        <ComboBoxItem Content="medium"/>
                        <ComboBoxItem Content="slow"/>
                        <ComboBoxItem Content="slower"/>
                        <ComboBoxItem Content="veryslow"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="4">
                    <TextBlock Text="Encoder" Foreground="{StaticResource SecondaryForegroundBrush}" />
                    <ComboBox x:Name="EncoderSelector"
                              SelectedIndex="{Binding EncoderSelectedIndex, Mode=TwoWay}"
                              SelectionChanged="EncoderSelector_SelectionChanged">
                        <ComboBoxItem Content="Auto"/>
                        <ComboBoxItem Content="libx264"/>
                        <ComboBoxItem Content="libx265"/>
                        <ComboBoxItem Content="h264_nvenc"/>
                        <ComboBoxItem Content="hevc_nvenc"/>
                        <ComboBoxItem Content="h264_amf"/>
                        <ComboBoxItem Content="hevc_amf"/>
                        <ComboBoxItem Content="h264_qsv"/>
                        <ComboBoxItem Content="hevc_qsv"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="4">
                    <TextBlock Text="Container" Foreground="{StaticResource SecondaryForegroundBrush}" />
                    <ComboBox x:Name="ContainerSelector" SelectedIndex="{Binding ContainerSelectedIndex, Mode=TwoWay}">
                        <ComboBoxItem Content="mkv"/>
                        <ComboBoxItem Content="mp4"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="4">
                    <TextBlock Text="Priority" Foreground="{StaticResource SecondaryForegroundBrush}" />
                    <ComboBox x:Name="PrioritySelector"
                              SelectedIndex="{Binding PrioritySelectedIndex, Mode=TwoWay}"
                              SelectionChanged="PrioritySelector_SelectionChanged">
                        <ComboBoxItem Content="Idle"/>
                        <ComboBoxItem Content="BelowNormal"/>
                        <ComboBoxItem Content="Normal"/>
                        <ComboBoxItem Content="AboveNormal"/>
                        <ComboBoxItem Content="High"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="4">
                    <TextBlock x:Name="AudioCodecTextBlock" Text="Audio Codec" Foreground="{StaticResource SecondaryForegroundBrush}" />
                    <ComboBox x:Name="AudioCodecSelector"
                              SelectedIndex="{Binding AudioCodecSelectedIndex, Mode=TwoWay}">
                        <ComboBoxItem Content="aac"/>
                        <ComboBoxItem Content="mp3"/>
                        <ComboBoxItem Content="wav"/>
                        <ComboBoxItem Content="flac"/>
                    </ComboBox>
                </StackPanel>
            </UniformGrid>
        </Border>

        <!-- MAIN BODY -->
        <StackPanel Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- VIDEO -->
                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                    <TextBlock Text="VIDEO INPUT" FontWeight="Bold"
                               Foreground="{StaticResource SecondaryForegroundBrush}"
                               Margin="0,0,0,6"/>
                    <Border Background="{StaticResource PanelBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0.5"
                            CornerRadius="8"
                            Height="120"
                            AllowDrop="True"
                            DragEnter="Input_DragEnter"
                            DragLeave="Input_DragLeave"
                            Drop="VideoPath_Drop">
                        <Grid>
                            <TextBlock Text="Drop your video here or click below to load manually"
                                       Foreground="{StaticResource SecondaryForegroundBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center"/>
                        </Grid>
                    </Border>
                    <Button Content="Load Video"
                            Margin="0,8,0,24"
                            Click="SelectVideo_Click"/>
                </StackPanel>

                <!-- AUDIO -->
                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                    <TextBlock Text="AUDIO INPUT" FontWeight="Bold"
                               Foreground="{StaticResource SecondaryForegroundBrush}"
                               Margin="0,0,0,6"/>
                    <Border Background="{StaticResource PanelBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0.5"
                            CornerRadius="8"
                            Height="120"
                            AllowDrop="True"
                            DragEnter="Input_DragEnter"
                            DragLeave="Input_DragLeave"
                            Drop="AudioPath_Drop">
                        <Grid>
                            <TextBlock Text="Drop your audio here or click below to load manually"
                                       Foreground="{StaticResource SecondaryForegroundBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center"/>
                        </Grid>
                    </Border>
                    <Button Content="Load Audio"
                            Margin="0,8,0,24"
                            Click="SelectAudio_Click"/>
                </StackPanel>
            </Grid>

            <!-- FFMPEG -->
            <TextBlock Text="FFMPEG LOCATION" FontWeight="Bold"
                       Foreground="{StaticResource SecondaryForegroundBrush}"
                       Margin="0,0,0,6"/>
            <Button Content="Set FFMPEG"
                    Margin="0,8,0,24"
                    Click="SelectFfmpeg_Click"
                    IsEnabled="{Binding IsFfmpegNotAvailable}"/>

            <!-- LOG OUTPUT -->
            <TextBox x:Name="LogOutput"
                     Background="#121212"
                     Foreground="#DADADA"
                     FontFamily="Consolas"
                     BorderBrush="{StaticResource BorderBrush}"
                     BorderThickness="1"
                     Height="160"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Margin="0,8,0,0"
                     IsReadOnly="True"
                     Text="{Binding LogText, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                     TextChanged="LogOutput_TextChanged"/>
        </StackPanel>

        <!-- FOOTER -->
        <DockPanel Grid.Row="2" Margin="0,16,0,0">
            <ProgressBar x:Name="ProgressBar"
                         DockPanel.Dock="Top"
                         Height="4"
                         Foreground="{StaticResource AccentBrush}"
                         Value="{Binding Progress, Mode=OneWay}"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="0,8,0,0">
                <Button Content="Start"
                        Width="100"
                        Margin="0,0,8,0"
                        Click="StartButton_Click"
                        IsEnabled="{Binding IsNotEncoding}"/>
                <Button Content="Stop"
                        Width="100"
                        Margin="0,0,8,0"
                        Click="StopButton_Click"
                        IsEnabled="{Binding IsEncoding}"/>
                <Button x:Name="PauseResumeButton"
                        Content="Pause"
                        Width="100"
                        Click="PauseResumeButton_Click"
                        IsEnabled="{Binding IsEncoding}"/>
            </StackPanel>

            <TextBlock Text="{Binding Eta, StringFormat=ETA: {0}}"
                       Foreground="{StaticResource SecondaryForegroundBrush}"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,8,0,0"/>
        </DockPanel>

        <!-- HELP POPUP -->
        <Popup x:Name="HelpPopup"
               IsOpen="False"
               Placement="Mouse"
               AllowsTransparency="True">
            <Border Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    Padding="10"
                    CornerRadius="8">
                <TextBlock Text="Drag and drop video/audio files, select encoder and options, then click Start."
                           Foreground="{StaticResource ForegroundBrush}"/>
            </Border>
        </Popup>
    </Grid>
</Window>
