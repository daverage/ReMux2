<Window x:Class="ReMux2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReMux2"
        mc:Ignorable="d"
        Title="ReMux2"
        Height="750" Width="900"
        Loaded="MainWindow_Loaded"
        Closing="MainWindow_Closing"
        Background="{StaticResource PanelBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER CONTROLS -->
        <Border Grid.Row="0" Background="{StaticResource PanelBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                CornerRadius="6" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Mode" Foreground="{StaticResource SecondaryForegroundBrush}" Margin="0,0,0,5"/>
                    <ComboBox x:Name="ModeSelector" SelectedIndex="{Binding ModeSelectedIndex, Mode=TwoWay}"
                              SelectionChanged="ModeSelector_SelectionChanged" Foreground="White">
                        <ComboBoxItem Content="Extract Audio"/>
                        <ComboBoxItem Content="Remux Audio"/>
                        <ComboBoxItem Content="YouTube Optimize"/>
                        <ComboBoxItem Content="Yify Reencode"/>
                        <ComboBoxItem Content="Custom Encode"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="Preset" Foreground="{StaticResource SecondaryForegroundBrush}" Margin="0,0,0,5"/>
                    <ComboBox x:Name="PresetSelector" SelectedIndex="{Binding PresetSelectedIndex, Mode=TwoWay}" Foreground="White">
                        <ComboBoxItem Content="ultrafast"/>
                        <ComboBoxItem Content="superfast"/>
                        <ComboBoxItem Content="veryfast"/>
                        <ComboBoxItem Content="faster"/>
                        <ComboBoxItem Content="fast"/>
                        <ComboBoxItem Content="medium"/>
                        <ComboBoxItem Content="slow"/>
                        <ComboBoxItem Content="slower"/>
                        <ComboBoxItem Content="veryslow"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="0,0,10,0">
                    <TextBlock Text="Encoder" Foreground="{StaticResource SecondaryForegroundBrush}" Margin="0,0,0,5"/>
                    <ComboBox x:Name="EncoderSelector"
                              SelectedIndex="{Binding EncoderSelectedIndex, Mode=TwoWay}"
                              SelectionChanged="EncoderSelector_SelectionChanged" Foreground="White">
                        <ComboBoxItem Content="Auto"/>
                        <ComboBoxItem Content="libx264"/>
                        <ComboBoxItem Content="libx265"/>
                        <ComboBoxItem Content="h264_nvenc"/>
                        <ComboBoxItem Content="hevc_nvenc"/>
                        <ComboBoxItem Content="h264_amf"/>
                        <ComboBoxItem Content="hevc_amf"/>
                        <ComboBoxItem Content="h264_qsv"/>
                        <ComboBoxItem Content="hevc_qsv"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="3" Margin="0,0,10,0">
                    <TextBlock Text="Container" Foreground="{StaticResource SecondaryForegroundBrush}" Margin="0,0,0,5"/>
                    <ComboBox x:Name="ContainerSelector" SelectedIndex="{Binding ContainerSelectedIndex, Mode=TwoWay}" Foreground="White">
                        <ComboBoxItem Content="mkv"/>
                        <ComboBoxItem Content="mp4"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="4">
                    <TextBlock Text="Priority" Foreground="{StaticResource SecondaryForegroundBrush}" Margin="0,0,0,5"/>
                    <ComboBox x:Name="PrioritySelector"
                              SelectedIndex="{Binding PrioritySelectedIndex, Mode=TwoWay}"
                              SelectionChanged="PrioritySelector_SelectionChanged" Foreground="White">
                        <ComboBoxItem Content="Idle"/>
                        <ComboBoxItem Content="BelowNormal"/>
                        <ComboBoxItem Content="Normal"/>
                        <ComboBoxItem Content="AboveNormal"/>
                        <ComboBoxItem Content="High"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- AUDIO CODEC SELECTOR (CONDITIONAL) -->
        <Border Grid.Row="1" Background="{StaticResource PanelBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                CornerRadius="6" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock x:Name="AudioCodecTextBlock" Text="Audio Codec" 
                           Foreground="{StaticResource SecondaryForegroundBrush}" Margin="0,0,0,5"/>
                <ComboBox x:Name="AudioCodecSelector"
                          SelectedIndex="{Binding AudioCodecSelectedIndex, Mode=TwoWay}" 
                          Foreground="White" Width="200" HorizontalAlignment="Left">
                    <ComboBoxItem Content="aac"/>
                    <ComboBoxItem Content="mp3"/>
                    <ComboBoxItem Content="wav"/>
                    <ComboBoxItem Content="flac"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- FILE INPUT SECTION -->
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- VIDEO INPUT -->
            <Border Grid.Column="0" Background="{StaticResource PanelBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                    CornerRadius="6" Padding="15">
                <StackPanel>
                    <TextBlock Text="VIDEO INPUT" FontWeight="Bold"
                               Foreground="{StaticResource SecondaryForegroundBrush}"
                               Margin="0,0,0,10"/>
                    <Border Background="{StaticResource PanelBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            MinHeight="120"
                            AllowDrop="True"
                            DragEnter="Input_DragEnter"
                            DragLeave="Input_DragLeave"
                            Drop="VideoPath_Drop">
                        <TextBlock Text="{Binding VideoFileName, FallbackValue='Drop Video File Here'}"
                                   Foreground="{StaticResource SecondaryForegroundBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="10"/>
                    </Border>
                    <Button Content="Load Video"
                            Margin="0,10,0,0"
                            Click="SelectVideo_Click"/>
                </StackPanel>
            </Border>

            <!-- AUDIO INPUT -->
            <Border Grid.Column="2" Background="{StaticResource PanelBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                    CornerRadius="6" Padding="15">
                <StackPanel>
                    <TextBlock Text="AUDIO INPUT" FontWeight="Bold"
                               Foreground="{StaticResource SecondaryForegroundBrush}"
                               Margin="0,0,0,10"/>
                    <Border Background="{StaticResource PanelBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            MinHeight="120"
                            AllowDrop="True"
                            DragEnter="Input_DragEnter"
                            DragLeave="Input_DragLeave"
                            Drop="AudioPath_Drop">
                        <TextBlock Text="{Binding AudioFileName, FallbackValue='Drop Audio File Here'}"
                                   Foreground="{StaticResource SecondaryForegroundBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="10"/>
                    </Border>
                    <Button Content="Load Audio"
                            Margin="0,10,0,0"
                            Click="SelectAudio_Click"/>
                </StackPanel>
            </Border>

            <!-- FFMPEG LOCATION -->
            <Border Grid.Column="4" Background="{StaticResource PanelBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                    CornerRadius="6" Padding="15">
                <StackPanel>
                    <TextBlock Text="FFMPEG LOCATION" FontWeight="Bold"
                               Foreground="{StaticResource SecondaryForegroundBrush}"
                               Margin="0,0,0,10"/>
                    <Border Background="{StaticResource PanelBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            MinHeight="120"
                            AllowDrop="True"
                            DragEnter="Input_DragEnter"
                            DragLeave="Input_DragLeave"
                            Drop="FfmpegPath_Drop">
                        <TextBlock Text="Drop ffmpeg.exe here"
                                   Foreground="{StaticResource SecondaryForegroundBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="10"/>
                    </Border>
                    <Button Content="Set FFMPEG"
                            Margin="0,10,0,0"
                            Click="SelectFfmpeg_Click"
                            IsEnabled="{Binding IsFfmpegNotAvailable}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- PROGRESS AND CONTROLS -->
        <Border Grid.Row="3" Background="{StaticResource PanelBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                CornerRadius="6" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ProgressBar Grid.Row="0"
                             Height="6"
                             Foreground="{StaticResource AccentBrush}"
                             Value="{Binding Progress, Mode=OneWay}"
                             Margin="0,0,0,10"/>

                <Grid Grid.Row="1">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="Start"
                                Width="100"
                                Margin="0,0,10,0"
                                Click="StartButton_Click"
                                IsEnabled="{Binding IsNotEncoding}"/>
                        <Button Content="Stop"
                                Width="100"
                                Margin="0,0,10,0"
                                Click="StopButton_Click"
                                IsEnabled="{Binding IsEncoding}"/>
                        <Button x:Name="PauseResumeButton"
                                Content="Pause"
                                Width="100"
                                Click="PauseResumeButton_Click"
                                IsEnabled="{Binding IsEncoding}"/>
                    </StackPanel>

                    <TextBlock Text="{Binding Eta, StringFormat=ETA: {0}}"
                               Foreground="{StaticResource SecondaryForegroundBrush}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </Border>

        <!-- LOG OUTPUT -->
        <Border Grid.Row="4" Background="{StaticResource PanelBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                CornerRadius="6" Padding="15">
            <StackPanel>
                <TextBlock Text="LOG OUTPUT" FontWeight="Bold"
                           Foreground="{StaticResource SecondaryForegroundBrush}"
                           Margin="0,0,0,10"/>
                <TextBox x:Name="LogOutput"
                         Background="#121212"
                         Foreground="#DADADA"
                         FontFamily="Consolas"
                         BorderBrush="{StaticResource BorderBrush}"
                         BorderThickness="1"
                         Height="120"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         IsReadOnly="True"
                         Text="{Binding LogText, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                         TextChanged="LogOutput_TextChanged"/>
            </StackPanel>
        </Border>

        <!-- HELP POPUP -->
        <Popup x:Name="HelpPopup"
               IsOpen="False"
               Placement="Mouse"
               AllowsTransparency="True">
            <Border Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    Padding="10"
                    CornerRadius="8">
                <TextBlock Text="Drag and drop video/audio files, select encoder and options, then click Start."
                           Foreground="{StaticResource ForegroundBrush}"/>
            </Border>
        </Popup>
    </Grid>
</Window>
